extends layout

block content
  h1 Public
  form(method="post", action="/submitPublic", enctype="multipart/form-data")
    input(type="file", name="image")
    input(type="submit")

  h1 Private
  form(method="post", action="/submitPrivate", enctype="multipart/form-data")
    input(type="file", name="image")
    input(type="submit")


  h1 Files
  ul
    for file in s3.Contents
      li= file.Key
        br
        a(href='https://s3.amazonaws.com/crolfs-test/' + file.Key) Public Link
        img(src="https://s3.amazonaws.com/crolfs-test/#{file.Key}", alt="")
        br
        a(href='/view?key=' + file.Key) Private Link
